<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPetActivity">

    <Button
        android:id="@+id/add_photo_button"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/launch_camera_button"
        android:layout_marginTop="0dp"
        android:text="@string/add_saved_picture" />

    <Button
        android:id="@+id/launch_camera_button"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/pet_photo_view"
        android:layout_marginTop="0dp"
        android:text="@string/take_new_picture" />

    <TextView
        android:id="@+id/add_image_label"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:text="@string/add_image_label"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/pet_photo_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@null" />

    <EditText
        android:id="@+id/pet_name_input"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/launch_camera_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:ems="6"
        android:gravity="center"
        android:hint="@string/pet_name_label"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textAlignment="center" />

    <Spinner
        android:id="@+id/species_spinner"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="64dp"
        android:spinnerMode="dropdown" />

    <EditText
        android:id="@+id/birthDate_input"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="123dp"
        android:ems="10"
        android:focusableInTouchMode="false"
        android:hint="@string/birth_date"
        android:textAlignment="center"
        android:inputType="date"
        android:importantForAutofill="no" />

    <Button
        android:id="@+id/add_pet_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/add_pet"
        android:textAlignment="center" />

</RelativeLayout>