<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:id="@+id/history_card_layout"
android:layout_width="match_parent"
android:layout_height="55dp"
android:layout_margin="3dp"
android:clickable="true"
android:foreground="?android:attr/selectableItemBackground"
android:orientation="vertical"
android:layout_gravity="center_vertical"
card_view:cardCornerRadius="10dp">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:transitionName="layout_transition">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/history_name"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:transitionName="name_transition" />

            <Button
                android:id="@+id/edit_pet_history_button"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="@string/edit_note"
                android:textAlignment="center"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/history_table_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <TextView
                android:id="@+id/profile_table_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>